{
  "name": "theme",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/theme/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/theme",
        "main": "packages/theme/src/index.ts",
        "tsConfig": "packages/theme/tsconfig.lib.json",
        "assets": ["packages/theme/*.md"]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/theme/**/*.ts",
          "packages/theme/package.json"
        ]
      }
    },
    "format": {
      "command": "prettier-eslint --config .prettierrc.json --write \"packages/theme/**/*.{jsx,js,ts,tsx}\""
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/theme/jest.config.ts"
      }
    }
  },
  "tags": []
}
