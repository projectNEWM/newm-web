{
  "hosting": [
    {
      "target": "staging",
      "public": "dist/apps/studio",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "production",
      "public": "dist/apps/studio",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "redirects": [
        {
          "source": "/",
          "destination": "https://newm.studio/",
          "type": 301
        }
      ]
    }
  ]
}
